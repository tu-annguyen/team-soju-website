---
import Layout from '../../layouts/Layout.astro';
import Bingo from '../../components/Bingo';
---

<Layout 
  title="Events - Team Soju" 
  description="Explore Team Soju's events."
>
  <div class="py-16 bg-gradient-to-br from-primary-50 to-secondary-50 dark:from-gray-900 dark:to-gray-800">
    <div class="container">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold mb-4 text-gray-900 dark:text-white">
          Events
        </h1>
        <p class="text-gray-700 dark:text-gray-300 max-w-3xl mx-auto">
          Our team's collection of past, current, and upcoming events.
        </p>
      </div>
    </div>
  </div>
  
  <section class="py-16">
    <div class="container">
      <div class="mb-12">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Current Events</h2>
        <p class="text-gray-700 dark:text-gray-300 mb-8">
          Stay updated with our ongoing events. Participate and engage with the community! 
        </p>
        <h3 class="text-center text-2xl font-bold mb-4 text-gray-900 dark:text-white">2025</h3>
        <div class="flex justify-center mb-8">
          <a href="/events/2025/anniversary"class="btn btn-primary">Anniversary</a>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16">
    <div class="container">
      <div class="mb-12">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Upcoming Events</h2>
        <p class="text-gray-700 dark:text-gray-300 mb-8">
          Stay tuned for our next event! We are always planning exciting activities for our community.
        </p>
      </div>
    </div>
  </section>

  <section class="py-16">
    <div class="container">
      <div class="mb-12">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Past Events</h2>
        <p class="text-gray-700 dark:text-gray-300 mb-8">
          Check out our past events to see what we've accomplished and the fun we've had together.
        </p>
        <h3 class="text-center text-2xl font-bold mb-4 text-gray-900 dark:text-white">2025</h3>
        <div class="flex justify-center mb-8">
          <a href="/events/2025/bingo"class="btn btn-primary">Bingo</a>
        </div>
      </div>
    </div>
  </section>
</Layout>