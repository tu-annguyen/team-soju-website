---
import Layout from '../layouts/Layout.astro';
import PNGUploader from '../components/PNGUploader.tsx';
---

<Layout title="Submissions - Team Soju" description="Submit photos of newly caught Pokémon">
  <div class="py-16 bg-gradient-to-br from-primary-50 to-secondary-50 dark:from-gray-900 dark:to-gray-800">
    <div class="container">
      <div class="text-center mb-8">
        <h1 class="text-4xl md:text-5xl font-bold mb-2 text-gray-900 dark:text-white">Submit a Catch</h1>
        <p class="text-gray-700 dark:text-gray-300 max-w-2xl mx-auto">
          Share a PNG of your newly caught Pokémon. Only .png files are accepted. Max file size enforced by uploader.
        </p>
      </div>

      <section class="max-w-2xl mx-auto">
        <div class="bg-white dark:bg-gray-900 p-6 rounded-lg shadow">
          <!-- PNGUploader is a React component; hydrate on the client -->
          <PNGUploader client:load uploadUrl="/api/upload-png" />
        </div>
      </section>
    </div>
  </div>
</Layout>